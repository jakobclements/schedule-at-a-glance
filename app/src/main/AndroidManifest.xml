<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.schedule_at_a_glance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/custom_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/custom_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Schedule_at_a_glance">
        <activity
            android:name=".TaskDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".ViewTasksRecyclerActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewTasksActivity"
            android:exported="true" />
        <activity
            android:name=".CreateTaskActivity"
            android:exported="true" />
    </application>

</manifest>